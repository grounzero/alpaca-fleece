# Alpaca API Credentials
# Get your API keys from: https://app.alpaca.markets/paper/dashboard/overview (paper) or https://app.alpaca.markets/brokerage/dashboard/overview (live)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_PAPER=true

# SAFETY GATE: Both required for live trading
# Set ALPACA_PAPER=false AND ALLOW_LIVE_TRADING=true to enable real money trading
ALLOW_LIVE_TRADING=false

# Trading Configuration
SYMBOLS=AAPL,MSFT
BAR_TIMEFRAME=1Min
STREAM_FEED=iex

# Risk Limits
MAX_POSITION_PCT=0.10
MAX_DAILY_LOSS_PCT=0.05
MAX_TRADES_PER_DAY=20

# Strategy Parameters
SMA_FAST=10
SMA_SLOW=30

# Operational Modes
DRY_RUN=false
ALLOW_EXTENDED_HOURS=false
LOG_LEVEL=INFO

# Safety Controls
# KILL_SWITCH=true will prevent all trading (can also create .kill_switch file)
# KILL_SWITCH=false

# Circuit Breaker Reset
# Set to true to reset circuit breaker on startup (after fixing issues)
# CIRCUIT_BREAKER_RESET=false
